<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Recipes</title>
  <link rel="stylesheet" href="/style/style.css" />

</head>
<body>
  <h1>My Recipes</h1>
<div class="form-page">
  <% if (recipes.length > 0) { %>
    <ul>
      <% recipes.forEach(recipe => { %>
        <li>
          <a href="/recipes/<%= recipe._id %>"><%= recipe.name %></a>
          |
          <a href="/recipes/<%= recipe._id %>/edit">Edit</a>
          |
          <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>You have not created any recipes yet.</p>
  <% } %>

  <a href="/recipes/new">Add a New Recipe</a>
  </div>
</body>
</html>
